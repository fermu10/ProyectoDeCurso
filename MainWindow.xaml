<Window x:Class="proyectodecurso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyectodecurso"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>


        <Border  BorderThickness="1" Background="#1b1448" BorderBrush="MediumSlateBlue" />

        <TextBlock x:Name="boliviaAviationBlock" HorizontalAlignment="Center" Text="Bolivia Aviation" Foreground="White" Background="Transparent" FontSize="35" FontWeight="Medium" FontFamily="Montserrat" Margin="0,35,0,2" Width="254"/>
        <Button x:Name="btnRegistrar" Background="#0000FF"  Content="Registrarse"   FontFamily="Montserrat" Foreground="White" FontSize="12" Cursor="Hand" Margin="307,177,351,200" Click="btnRegistrar_Click"/>
        <Button x:Name="btnEntrar" Background="#0000FF"  Content="Entrar"   FontFamily="Montserrat" Foreground="White" FontSize="12" Cursor="Hand" Margin="307,272,351,105" Click="btnEntrar_Click"/>

    </Grid>
</Window>