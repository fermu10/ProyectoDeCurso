<Window x:Class="proyectodecurso.ventanaCredencial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyectodecurso"
        mc:Ignorable="d"
        Title="ventanaCredencial" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblNombreUsuario" Content="Nombre Usuario:" HorizontalAlignment="Left" Margin="302,117,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblContra" Content="Contraseña:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="302,195,0,0"/>
        <TextBox x:Name="textNombreUsuario" HorizontalAlignment="Left" Margin="302,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnIngresar" Content="Ingresar" HorizontalAlignment="Left" Margin="339,295,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboCredencial" HorizontalAlignment="Left" Margin="50,41,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Usuario"/>
            <ComboBoxItem Content="Administrador"/>
        </ComboBox>
        <PasswordBox x:Name="contraseñaIniciar" HorizontalAlignment="Left" Margin="302,246,0,0" VerticalAlignment="Top" Width="120" MaxLength="8"/>

    </Grid>
</Window>
